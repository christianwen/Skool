<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_margin="15dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/chat_room_image" />

    <TextView
        android:id="@+id/chat_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_room_image"
        android:layout_toEndOf="@+id/chat_room_image"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_room_name"
        android:layout_toEndOf="@+id/chat_room_image"
         />

    <TextView
        android:id="@+id/last_message_time"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/chat_room_name"
         />
</RelativeLayout>